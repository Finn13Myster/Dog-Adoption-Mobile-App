<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/dogProfilePicture"
        android:src="@color/black"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/dogName"
        android:layout_toRightOf="@+id/dogProfilePicture"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Name: "
        />

    <TextView
        android:id="@+id/dogAdoptionStatus"
        android:layout_toRightOf="@+id/dogProfilePicture"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogName"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Adoption Status: "
        />

    <TextView
        android:id="@+id/dogAdoptedBy"
        android:layout_toRightOf="@+id/dogProfilePicture"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogAdoptionStatus"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Adopted by: "
        />
</RelativeLayout>